int tonePin = 11;
int ledPins[] = {2, 3, 4};

int notes[] = {293, 493, 440, 391, 293, 293, 293, 493, 440, 391, 329, 329, 329, 523, 493, 440, 587, 587, 659, 587, 523, 440, 493, 293, 293, 493, 440, 391, 293, 293, 293, 493, 440, 391, 329, 329, 329, 523, 493, 440, 587, 587, 587, 587, 659, 587, 523, 440, 391, 587, 493, 493, 493, 493, 493, 493, 493, 587, 391, 440, 493, 523, 523, 523, 523, 523, 493, 493, 493, 493, 587, 587, 523, 440, 391, 523, 523, 523, 523, 523, 493, 493, 493, 493, 587, 587, 523, 440, 391};

int durations[] = {225, 225, 225, 225, 450, 225, 225, 225, 225, 225, 450, 225, 225, 225, 225, 225, 450, 225, 225, 225, 225, 225, 675, 225, 225, 225, 225, 225, 450, 225, 225, 225, 225, 225, 450, 225, 225, 225, 225, 225, 225, 225, 225, 225, 225, 225, 225, 225, 450, 450, 225, 225, 450, 225, 225, 450, 225, 225, 337, 112, 450, 225, 225, 337, 112, 225, 225, 225, 112, 112, 225, 225, 225, 225, 450, 450, 225, 225, 450, 225, 225, 450, 225, 225, 337, 112, 450, 225, 225, 337, 112, 225, 225, 225, 112, 112, 225, 225, 225, 225, 675};

int ledIndexes[] = {0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0, 1, 2, 0};

void setup() {
  for (int i = 0; i < 3; i++) {
    pinMode(ledPins[i], OUTPUT);
  }
}

void playNoteWithLED(int note, int duration, int ledIndex) {
  tone(tonePin, note, duration);
  for (int i = 0; i < 3; i++) { 
    digitalWrite(ledPins[i], LOW);
  }
  digitalWrite(ledPins[ledIndex], HIGH);
  delay(duration);
  digitalWrite(ledPins[ledIndex], LOW);
}

void loop() {
  int numberOfNotes = sizeof(notes) / sizeof(notes[0]);
  for (int i = 0; i < numberOfNotes; i++) {
    playNoteWithLED(notes[i], durations[i], ledIndexes[i]);
    delay(50);
  }
  delay(5000); 
}
